<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>type_stockage</param-name>
        <param-value>mysql</param-value>
    </context-param>
    <display-name>DL_EX2</display-name>
    <welcome-file-list>
        <welcome-file>/WEB-INF/pages/Login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <description></description>
        <display-name>LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>web.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <description></description>
        <display-name>UserManagementServlet</display-name>
        <servlet-name>UserManagementServlet</servlet-name>
        <servlet-class>web.servlets.UserManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserManagementServlet</servlet-name>
        <url-pattern>/UserManagementServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description></description>
        <display-name>BestScoreServlet</display-name>
        <servlet-name>BestScoreServlet</servlet-name>
        <servlet-class>web.servlets.UserManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BestScoreServlet</servlet-name>
        <url-pattern>/BestScoreServlet</url-pattern>
    </servlet-mapping>
</web-app>